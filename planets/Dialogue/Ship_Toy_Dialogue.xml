<DialogueTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/xen-42/outer-wilds-new-horizons/main/NewHorizons/Schemas/dialogue_schema.xsd">
	<NameField>Toy box</NameField>

	<DialogueNode>
		<Name>Start</Name>
		<EntryCondition>DEFAULT</EntryCondition>
		<Dialogue>
			<Page>Hmm... </Page>
		</Dialogue>
		<DialogueOptionsList>
			<DialogueOption>
			<RequiredPersistentCondition>SEED_TOY_GIVEN</RequiredPersistentCondition>
			<CancelledPersistentCondition>SEED_CURRENT_TOY</CancelledPersistentCondition>
				<Text>Put seed toy.</Text>
				<ConditionToSet>SEED_CURRENT_TOY</ConditionToSet>
				<ConditionToCancel>SNOWMAN_CURRENT_TOY</ConditionToCancel>
				<ConditionToCancel>TOYS_REMOVED</ConditionToCancel>			
			</DialogueOption>
			<DialogueOption>
			<RequiredPersistentCondition>SNOWMAN_TOY_GIVEN</RequiredPersistentCondition>
			<CancelledPersistentCondition>SNOWMAN_CURRENT_TOY</CancelledPersistentCondition>
				<Text>Put snowman toy.</Text>
				<ConditionToSet>SNOWMAN_CURRENT_TOY</ConditionToSet>
				<ConditionToCancel>SEED_CURRENT_TOY</ConditionToCancel>
				<ConditionToCancel>TOYS_REMOVED</ConditionToCancel>			
			</DialogueOption>
			<DialogueOption>
			<CancelledPersistentCondition>TOYS_REMOVED</CancelledPersistentCondition>
				<Text>Remove toy.</Text>
				<ConditionToSet>TOYS_REMOVED</ConditionToSet>
				<ConditionToCancel>SEED_CURRENT_TOY</ConditionToCancel>
				<ConditionToCancel>SNOWMAN_CURRENT_TOY</ConditionToCancel>						
			</DialogueOption>
			<DialogueOption>			
				<Text>Nevermind.</Text>				
			</DialogueOption>					
		</DialogueOptionsList>
	</DialogueNode>

	
</DialogueTree>
